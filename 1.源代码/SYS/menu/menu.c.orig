/******************   	  
功能：模式选择及控制界面
参数：无
返回值：无
******************/
void Mode_Decide(void)//模式判定
{
	
	   Manual_Mode();
    //按键判定
    if(isKey1)//若按键1按下
    {
        isKey1=isKey2=isKey3=isKey4=0;//清除按键按下标志
        oled_Clear();
        OperateMode++;
    }
    else if(isKey2&&(!OperateMode))//若按键2按下,且当前模式为自动模式
    {
        isKey1=isKey2=isKey3=isKey4=0;//清除按键按下标志
        oled_Clear();
        InterFace=!InterFace;
    }
    //标志位限制
    if(OperateMode>=4) OperateMode=0;
    /**根据模式选择显示界面**/
    switch(OperateMode)
    {
        case 0:
            Inform_Show();//显示信息
            AutoContrl();//自动控制
        break;
        
				case 1: 
            Timed_mode();//防盗
				    AutoContrl();//自动控制
        break;
				
        case 2: 
					  AutoContrl();//自动控制
            ThresholdSet();//阈值设置1        
        break;
        
        case 3: 
					 Manual_Contrl();//手动模式
        break;
    }
    
}

